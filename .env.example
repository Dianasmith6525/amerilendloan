# Database
DATABASE_URL=postgresql://user:password@localhost:5432/amerilend

# Application
APP_URL=https://amerilendloan.com
NODE_ENV=production

# Authentication (Supabase or similar)
AUTH_SECRET=your-secret-key-here
SESSION_SECRET=your-session-secret-change-in-production

# Email Configuration - SendGrid
EMAIL_SERVICE_PROVIDER=sendgrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
EMAIL_FROM=noreply@amerilendloan.com
EMAIL_FROM_NAME=AmeriLend

# Authorize.Net Payment Gateway
AUTHORIZENET_API_LOGIN_ID=your-api-login-id
AUTHORIZENET_TRANSACTION_KEY=your-transaction-key
AUTHORIZENET_ENVIRONMENT=sandbox
# Set to 'production' for live transactions

# Cryptocurrency Wallet Addresses (Your Personal Wallets)
WALLET_ADDRESS_BTC=your-bitcoin-wallet-address
# Example: bc1qxy2kgdygjrsqtzq2n0yrf2493p83kkfjhx0wlh

WALLET_ADDRESS_ETH=your-ethereum-wallet-address
# Example: 0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb

WALLET_ADDRESS_USDT=your-usdt-erc20-wallet-address
# Same as ETH address if using ERC-20 USDT
# Example: 0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb

WALLET_ADDRESS_USDC=your-usdc-erc20-wallet-address
# Same as ETH address if using ERC-20 USDC
# Example: 0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb

# OpenAI (for AI features)
OPENAI_API_KEY=your-openai-api-key

# File Storage (optional)
STORAGE_BUCKET=amerilend-documents
