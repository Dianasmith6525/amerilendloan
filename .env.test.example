# Test Environment Configuration
# Copy this to .env.test and fill in your test database credentials

# Test Database (Use separate database from production!)
DATABASE_URL="mysql://user:password@host:port/amerilend_test"

# Test Email (Optional - can mock in tests)
SENDGRID_API_KEY="your_test_api_key"
SENDGRID_FROM_EMAIL="test@amerilend.com"
SENDGRID_FROM_NAME="AmeriLend Test"

# Test Payment Gateway (Use sandbox/test credentials)
AUTHORIZE_NET_API_LOGIN_ID="test_api_login"
AUTHORIZE_NET_TRANSACTION_KEY="test_transaction_key"
AUTHORIZE_NET_ENVIRONMENT="sandbox"

# Test Server Configuration
PORT=3000
NODE_ENV=test
SESSION_SECRET="test-secret-key-change-in-production"

# Test Admin Credentials
TEST_ADMIN_EMAIL="admin@test.com"
TEST_ADMIN_PASSWORD="TestAdmin123!"

# Test User Credentials  
TEST_USER_EMAIL="user@test.com"
TEST_USER_PASSWORD="TestUser123!"

# Disable external services in tests (optional)
DISABLE_EMAIL=false
DISABLE_PAYMENT_PROCESSING=false
DISABLE_SMS=true

# Test Feature Flags
ENABLE_TEST_MODE=true
ENABLE_DEBUG_LOGGING=true

# Important Notes:
# 1. NEVER use production database for tests
# 2. Use separate test API keys for external services
# 3. Tests will create/delete data - use isolated test database
# 4. Keep test credentials separate from production .env
